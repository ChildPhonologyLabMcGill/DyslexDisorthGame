{
  "name": "PhoPhloalpha",
  "description": "PhoPhlo is a screening test for early indications of reading troubles, before kids learn to read.",
  "version": "0.1.0",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },

  "offline_enabled": true,
  "permissions": [
    "unlimitedStorage", "tabs"
  ],

  "icons": {
    "16": "phophlo_assets/img/ic_phophlo16.png",
    "48": "phophlo_assets/img/ic_phophlo48.png",
    "128": "phophlo_assets/img/ic_phophlo128.png"
  },

  "sandbox": {
    "pages": ["index.html",
      "results_prototype.html",
      "node_modules/pre-sails/index.html",
      "node_modules/pre-tcpp/index.html",
      "node_modules/pre-tdfp/index.html",
      "node_modules/pre-tdfm/index.html"
    ]
  }
}
